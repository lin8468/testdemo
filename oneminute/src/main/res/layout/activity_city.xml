<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <ImageView
        android:id="@+id/city_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/city_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="50dp"
            android:text="现在,你在"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/city_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/city_now"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/city_now"
            android:textColor="#fff"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/city_hello_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_now"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:text="父母、朋友是否在身边呢？"
            android:textColor="#fff"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/city_hello_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/city_hello_1"
            android:layout_margin="20dp"
            android:text="多长时间没有给他们打过电话了呢？"
            android:textColor="#fff"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/city_hello_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_hello_2"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:text="不如趁现在给他们打个电话吧！"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/city_phone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/callbackground"
            android:onClick="click"
            android:visibility="invisible" />


    </RelativeLayout>


</FrameLayout>
